/* pages/components/widget.wxss */
@import "../common/css/customized.wxss";

.widget{
  position: absolute;
}

.widget-swiper{
  position: absolute;
  bottom: 0px;
  width: 100%;
  background-color: rgba(0,0,0,0.5);
  transition: all .5s ease-out 0s; 
  z-index: 999;
}

.widget-candidate {
  width: 100%;
  height: 100%;
  justify-content: center;
  display: flex;
}

.widget-confirm {
  position: absolute;
  bottom: -62px;
  z-index: 999;
  width: -webkit-calc(100% - 16px);
  width:    -moz-calc(100% - 16px);
  width:         calc(100% - 16px);
}